{
  "name": "@scootify/shared",
  "version": "0.1.0",
  "description": "Shared library for Ukrainian e-scooter e-commerce sites",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./db": "./src/db/index.ts",
    "./db/*": "./src/db/*.ts",
    "./types": "./src/types/index.ts",
    "./types/*": "./src/types/*.ts",
    "./lib": "./src/lib/index.ts",
    "./lib/*": "./src/lib/*.ts",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*.tsx",
    "./hooks": "./src/hooks/index.ts",
    "./hooks/*": "./src/hooks/*.ts",
    "./scripts/*": "./src/scripts/*.mjs",
    "./data": "./src/data/index.ts",
    "./data/*": "./src/data/*.ts",
    "./firebase": "./src/firebase/index.ts",
    "./firebase/*": "./src/firebase/*.ts",
    "./config": "./src/config/index.ts",
    "./config/*": "./src/config/*.ts",
    "./styles": "./src/styles/index.ts",
    "./styles/tokens.css": "./src/styles/tokens.css",
    "./styles/themes/*": "./src/styles/themes/*.ts",
    "./styles/themes/*.css": "./src/styles/themes/*.css"
  },
  "scripts": {
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "next": "^15.0.0 || ^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.0.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  },
  "keywords": [
    "e-scooter",
    "e-commerce",
    "ukraine",
    "shared-library",
    "next.js",
    "react"
  ],
  "license": "MIT"
}
